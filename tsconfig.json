{
  "compilerOptions": {
    "module": "CommonJS",  
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "noEmitOnError": true,         
      "removeComments": true,        
      "strict": true,                      
      "skipLibCheck": true 
  },
  "include":[
      "*.ts",
      "src/*.ts",
      "src/*/*.ts"
  ],
  "exclude" : [
      "nodule_modules"
  ]
}